# Configuration Django
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
ENVIRONMENT=production

# Base de données PostgreSQL
POSTGRES_DB=smartmarket
POSTGRES_USER=smartmarket
POSTGRES_PASSWORD=your-secure-password-here
DATABASE_URL=postgresql://smartmarket:your-secure-password-here@db:5432/smartmarket

# Redis (pour le cache ML et Celery)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password-here
REDIS_URL=redis://:your-redis-password-here@redis:6379/0

# Celery
CELERY_BROKER_URL=redis://:your-redis-password-here@redis:6379/1
CELERY_RESULT_BACKEND=redis://:your-redis-password-here@redis:6379/1

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@smartmarket.com

# OpenAI (pour l'assistant RAG)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500

# Configuration ML
ML_CACHE_TTL=3600
ML_RECOMMENDATION_TIMEOUT=0.15
ML_SEARCH_TIMEOUT=0.3
ML_RAG_TIMEOUT=2.0

# Sécurité
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
SENTRY_DSN=your-sentry-dsn-here


